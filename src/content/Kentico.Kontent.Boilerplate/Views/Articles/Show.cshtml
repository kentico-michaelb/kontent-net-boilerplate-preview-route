@*@using DancingGoat.Helpers.Extensions*@
@model Kentico.Kontent.Boilerplate.Models.ContentTypes.Article
@{
    ViewBag.Title = @Model.MetadataMetaTitle;
}
@*<section title="headers" , id="head">
    @await Html.PartialAsync("HeadersMetadata", Model)
</section>*@

<article class="article-detail col-lg-9 col-md-12 article-detail-related-box" data-kontent-item-id=@Model.System.Id>
    <h2 data-kontent-element-codename="title">@Html.DisplayFor(vm => vm.Title)</h2>
    <div class="row">
        <div class="article-detail-image col-md-push-2 col-md-8">
            <img-asset asset="@Model.TeaserImage.First()" class="img-responsive" default-width="300" title="Article @Model.System.Name" />
        </div>
    </div>
    <div class="row">
        <div class="article-detail-content"
             data-kontent-item-id=@Model.System.Id
             data-kontent-element-codename="body_copy"
             data-kontent-add-button
             data-kontent-add-button-render-position="bottom"
             data-kontent-add-button-insert-position="after"
             >
            @Html.Raw(Model.BodyCopy)
        </div>
    </div>
</article>

<!-- Twitter Widget-->
<script>
    window.twttr = (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
            t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function (f) {
            t._e.push(f);
        };

        return t;
    }(document, "script", "twitter-wjs"));</script>